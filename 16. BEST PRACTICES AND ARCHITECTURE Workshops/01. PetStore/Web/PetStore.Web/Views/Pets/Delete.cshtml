@model PetDetailsServiceModel

<h1>Are you sure you want to delete following pet?</h1>

<div>
    <p>@Model.Id</p>
    <p>@Model.Category</p>
    <p>@Model.Breed</p>
    <p>@Model.DateOfBirth.ToShortDateString()</p>
    <p>@Model.Gender.ToString()</p>
    <p>@Model.Description</p>
    <p>@Model.Price</p>
</div>

<div>
    <a href="/Pets/All" class="btn btn-info">Cancel</a> &nbsp;
    <a href="/Pets/ConfirmDelete/@Model.Id" class="btn btn-danger">Delete</a>
</div>
